{% extends "base.twig" %}

{% block content %}
	{% include "/components/blog/blog-intro.twig" %}

	<article class="post-type-{{ post.post_type }} block-spacer" id="post-{{ post.ID }}">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 offset-lg-1">
					<section class="blog__content">
						{% if post.sub_titulo %}
							<h5>
								{{post.sub_titulo}}
							</h5>
						{% endif %}

						{% if post.title %}
							<h1 class="article-h1">
								{{ post.title }}
							</h1>
						{% endif %}

						{% if post.thumbnail %}
							<img class="img-fluid w-100" src="{{ post.thumbnail.src }}" alt={{post.thumbnail.alt}}>
						{% endif %}

						<div>
							{{post.content}}
						</div>
					</section>

				</div>
			</div>
		</div>
	</article>
	<!-- /content-wrapper -->
{% endblock %}

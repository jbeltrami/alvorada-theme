{% if menu %}
<ul class="d-flex align-items-center justify-content-start">
	{% for item in items %}
	<li class="{{ item.classes | join(' ') }}">
		<a
			target="{{ item.target }}"
			href="{{ item.link }}"
		>{{ item.title }}</a>
		{% include "menu.twig" with {'items': item.children} %}
	</li>
	{% endfor %}
</ul>
{% endif %}
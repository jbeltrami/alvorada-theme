{% if posts.pagination.pages is not empty %}
  <nav class="pagination-block">
    <ul class="pagination">
      {# First #}
      {# {% if (posts.pagination.pages|first) and posts.pagination.pages|first.current != true %}
        <li class="first"><a href="{{ posts.pagination.pages|first.link }}">First</a></li>
      {% else %}
      <li class="first disabled"><button disabled>Primeira</button></li> {% endif %} #}

      {# Previous #}
      {% if posts.pagination.prev %}
        <li class="prev"><a href="{{ posts.pagination.prev.link }}">Anterior</a></li>
      {% endif %}

      {# Pages #}
      {% for page in posts.pagination.pages %}
        {% if page.link %}
          <li><a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a></li>
        {% else %}
          <li class="current"><span class="{{ page.class }}">{{ page.title }}</span></li>
        {% endif %}
      {% endfor %}

      {# Next #}
      {% if posts.pagination.next %}
        <li class="next"><a href="{{ posts.pagination.next.link }}">Próxima</a></li>
      {% endif %}

      {# Last #}
      {# {% if (posts.pagination.pages|last) and posts.pagination.pages|last.current != true %}
        <li class="last"><a href="{{ posts.pagination.pages|last.link }}">Última</a></li>
      {% else %}
        <li class="last disabled"><button disabled>Última</button></li>
      {% endif %} #}
    </ul>
  </nav>
{% endif %}
